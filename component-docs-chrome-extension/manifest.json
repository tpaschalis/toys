{
  "manifest_version": 3,
  "name": "Open Tab Extension",
  "version": "1.0",
  "description": "Open a new tab with a constructed URL",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}

